<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/home_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_header"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/home_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_desc"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_header"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/home_todo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:text="@string/home_todo"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_desc"
        app:layout_constraintEnd_toStartOf="@id/home_timer"/>

    <Button
        android:id="@+id/home_timer"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:text="@string/home_timer"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_desc"
        app:layout_constraintStart_toEndOf="@id/home_todo" />

    <Button
        android:id="@+id/home_stats"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:text="@string/home_stats"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_todo"
        app:layout_constraintEnd_toStartOf="@id/home_rewards"/>

    <Button
        android:id="@+id/home_rewards"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:text="@string/home_rewards"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_timer"
        app:layout_constraintStart_toEndOf="@id/home_stats" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>